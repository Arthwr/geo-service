<div
  class="flex flex-col-reverse md:flex-row justify-around gap-[20px] lg:justify-between mb-[100px] xxs:mb-[150px] h-full"
>
  <div class="md:max-w-[532px] w-full overflow-hidden">
    <img
      class="object-cover servicePic"
      src={geologyServiceImg.src}
      width="532px"
      height="700px"
      alt="Изображение инженерно-изыскательных геологических работ"
      loading="lazy"
      decoding="async"
