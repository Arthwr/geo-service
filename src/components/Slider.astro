---
import slide1 from "../assets/geodesySlide.webp";
import slide2 from "../assets/geologySlide.webp";
import slide3 from "../assets/laserSlide.webp";
---

<!-- Embla Carousel API & npm package
https://www.embla-carousel.com/api/options/
-->
<div id="hero-slider" class="embla">
  <div class="embla__container">
    <div id="slide-1" class="embla__slide">
      <div class="relative slide-wrapper">
        <img
          src={slide1.src}
          alt="Изображение инженерных работ по геодезии"
          width="1088px"
          height="725px"
        />
        <span class="slider-card">
          <h2>Геодезия</h2>
          <p>
            Исследуем состояние ваших зданий и сооружений, создаём геоподоснову
            и геодезическую разбивку, а также проводим экспертизы для вашей
            уверенности
          </p>
        </span>
      </div>
    </div>
    <div id="slide-2" class="embla__slide">
      <div class="relative slide-wrapper">
        <img
          src={slide2.src}
          alt="Изображение инженерных работ по геологии"
          width="1088px"
          height="725px"
        />
        <span class="slider-card">
          <h2>Геология</h2>
          <p>
            Анализируем состояние геологической среды на предполагаемых
            объектах, разрабатываем геологическую базу и проводим геодезическое
            обоснование.
          </p>
        </span>
      </div>
    </div>
    <div id="slide-3" class="embla__slide">
      <div class="relative slide-wrapper">
        <img
          src={slide3.src}
          alt="Изображение инженерных работ по лазерному сканированию"
          width="1088px"
          height="725px"
          loading="lazy"
        />
        <span class="slider-card">
          <h2>Лазерное сканирование</h2>
          <p>
            Проводим лазерное сканирование для подробного анализа объектов,
            создаем точную геопривязку и обеспечиваем геодезическое обоснование.
          </p>
        </span>
      </div>
    </div>
  </div>
  <div class="embla__dots"></div>
</div>

<style is:global>
  #hero-slider {
    z-index: 40;
  }
  .embla {
    margin-top: 30px;
    margin-bottom: 162px;
    overflow: hidden;
    position: relative;
  }
  .embla__container {
    display: flex;
  }
  .embla__slide {
    display: flex;
    justify-content: center;
    flex: 0 0 100%;
    min-width: 0;
    max-width: 100%;
  }
  .embla__dots {
    z-index: 5;
    top: 0.2rem;
    position: absolute;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .embla__dot {
    width: 2.4rem;
    height: 2.4rem;
    display: flex;
    align-items: center;
    margin-right: 0.75rem;
    margin-left: 0.75rem;
  }
  .embla__dot:after {
    background: rgba(226, 215, 215, 1);
    border-radius: 0.2rem;
    width: 100%;
    height: 0.3rem;
    content: "";
  }
  .embla__dot--selected:after {
    background: linear-gradient(45deg, rgb(138, 180, 248), rgb(193, 168, 226));
  }

  .slide-wrapper {
    border-radius: 16px;
    width: 1088px;
    height: 725px;
  }

  .slide-wrapper img {
    object-fit: cover;
    border-radius: 16px;
    opacity: 95%;
  }

  .slider-card {
    position: absolute;
    width: 756px;
    height: 170px;
    bottom: 0;
    left: 0;
    border-radius: 16px 16px 0px 16px;
    background: rgba(66, 117, 109, 0.55);
  }

  .slider-card h2 {
    font-weight: 700;
    font-size: 32px;
    color: #fffdfd;
    padding: 10px 0px 0px 37px;
  }

  .slider-card p {
    font-weight: 300;
    font-size: 24px;
    color: #fffdfd;
    padding: 0px 46px 9px 37px;
    line-height: normal;
  }
</style>

<script>
  import EmblaCarousel from "embla-carousel";
  import { addDotBtnsAndClickHandlers } from "../scripts/dot-buttons";
  import Autoplay from "embla-carousel-autoplay";

  const emblaNode = document.querySelector(".embla") as HTMLElement;
  const options = {
    loop: true,
    stopOnMouseEnter: true,
    stopOnInteraction: false,
    duration: 60,
  };
  const autoplayOptions = {
    delay: 10000,
  };

  const dotsNode = document.querySelector(".embla__dots");
  const emblaApi = EmblaCarousel(emblaNode, options, [
    Autoplay(autoplayOptions),
  ]);
  const removeDotBtnsAndClickHandlers = addDotBtnsAndClickHandlers(
    emblaApi,
    dotsNode
  );

  emblaApi.on("destroy", removeDotBtnsAndClickHandlers);
</script>
