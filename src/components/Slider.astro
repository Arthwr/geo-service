---
import slide1 from "../assets/geodesySlide.webp";
import slide2 from "../assets/geologySlide.webp";
import slide3 from "../assets/laserSlide.webp";
---

<!-- Embla Carousel API & npm package
https://www.embla-carousel.com/api/options/
-->
<div id="hero-slider" class="embla">
  <div class="embla__container">
    <div id="slide-1" class="embla__slide">
      <div class="relative slide-wrapper">
        <img
          src={slide1.src}
          alt="Изображение инженерных работ по геодезии"
          width="1088px"
          height="725px"
        />
        <span class="slider-card">
          <h2>Геодезия</h2>
          <p class="hidden xxs:block">
            Выполняем все виды геодезических услуг профессионально, качественно
            и в кратчайшие сроки. <br />
            <p class="sm:block hidden">
              Наш персонал – это специалисты высокого уровня во всех областях
              землеустройства и изысканий.
            </p>
          </p>
        </span>
      </div>
    </div>
    <div id="slide-2" class="embla__slide">
      <div class="relative slide-wrapper">
        <img
          src={slide2.src}
          alt="Изображение инженерных работ по геологии"
          width="1088px"
          height="725px"
        />
        <span class="slider-card">
          <h2>Геология</h2>
          <p class="hidden xxs:block">
            Выполняем весь комплекс инженерно-геологических изысканий на всех
            стадиях проектирования и строительства.
          </p>
        </span>
      </div>
    </div>
    <div id="slide-3" class="embla__slide">
      <div class="relative slide-wrapper">
        <img
          src={slide3.src}
          alt="Изображение инженерных работ по лазерному сканированию"
          width="1088px"
          height="725px"
          loading="lazy"
        />
        <span class="slider-card">
          <h2>Лазерное сканирование</h2>
          <p class="hidden xxs:block">
            Выполняем высокоточные измерения поверхности различных объектов –
            зданий, сооружений, рельефа в труднодоступных местах.
          </p>
        </span>
      </div>
    </div>
  </div>
  <div class="embla__dots"></div>
</div>

<style is:global>
  #hero-slider {
    z-index: 40;
  }
  .embla {
    margin-top: 30px;
    margin-bottom: 162px;
    overflow: hidden;
    position: relative;
  }
  .embla__container {
    display: flex;
  }
  .embla__slide {
    display: flex;
    justify-content: center;
    flex: 0 0 100%;
    min-width: 0;
    max-width: 100%;
  }

  .embla__dots {
    z-index: 5;
    top: 0.2rem;
    position: absolute;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .embla__dot {
    width: 2.4rem;
    height: 2.4rem;
    display: flex;
    align-items: center;
    margin-right: 0.75rem;
    margin-left: 0.75rem;
  }
  .embla__dot:after {
    background: rgba(226, 215, 215, 1);
    border-radius: 0.2rem;
    width: 100%;
    height: 0.3rem;
    content: "";
  }
  .embla__dot--selected:after {
    background: linear-gradient(45deg, rgb(138, 180, 248), rgb(193, 168, 226));
  }

  .slide-wrapper {
    border-radius: 16px;
  }

  .slide-wrapper img {
    object-fit: cover;
    border-radius: 16px;
    opacity: 95%;
    @media screen and (max-width: 1200px) {
      width: 900px;
    }
    @media screen and (max-width: 937px) {
      width: 700px;
    }
    @media screen and (max-width: 740px) {
      width: 550px;
    }

    @media screen and (max-width: 431px) {
      width: 400px;
    }
  }

  #slide-1 .slider-card {
    position: absolute;
    width: 756px;
    height: 200px;
    bottom: 0;
    left: 0;
    border-radius: 16px 16px 0px 16px;
    background: rgba(66, 117, 109, 0.55);

    @media screen and (max-width: 1200px) {
      height: 180px;
    }
    @media screen and (max-width: 937px) {
      width: 650px;
    }
    @media screen and (max-width: 740px) {
      width: 550px;
      height: 150px;
      border-radius: 16px 16px 16px 16px;
    }
    @media screen and (max-width: 431px) {
      width: auto;
      height: auto;
      border-radius: 16px 16px 0px 16px;
    }
  }

  #slide-2 .slider-card {
    position: absolute;
    width: 756px;
    height: 170px;
    bottom: 0;
    left: 0;
    border-radius: 16px 16px 0px 16px;
    background: rgba(66, 117, 109, 0.55);

    @media screen and (max-width: 1200px) {
      height: 130px;
    }
    @media screen and (max-width: 937px) {
      height: 150px;
      width: 650px;
    }
    @media screen and (max-width: 740px) {
      width: 550px;
      border-radius: 16px 16px 16px 16px;
    }
    @media screen and (max-width: 431px) {
      width: auto;
      height: auto;
      border-radius: 16px 16px 0px 16px;
    }
  }

  #slide-3 .slider-card {
    position: absolute;
    width: 756px;
    height: 170px;
    bottom: 0;
    left: 0;
    border-radius: 16px 16px 0px 16px;
    background: rgba(66, 117, 109, 0.55);

    @media screen and (max-width: 1200px) {
      height: 130px;
    }
    @media screen and (max-width: 937px) {
      height: 150px;
      width: 650px;
    }
    @media screen and (max-width: 740px) {
      width: 550px;
      border-radius: 16px 16px 16px 16px;
    }
    @media screen and (max-width: 431px) {
      width: auto;
      height: auto;
      border-radius: 16px 16px 0px 16px;
    }
  }

  .slider-card h2 {
    font-weight: 700;
    font-size: 32px;
    color: #fffdfd;
    padding: 10px 0px 0px 37px;
    @media screen and (max-width: 1200px) {
      font-size: 28px;
      margin-bottom: 5px;
    }
    @media screen and (max-width: 740px) {
      font-size: 24px;
      padding-left: 20px;
    }
    @media screen and (max-width: 431px) {
      font-size: 20px;
      margin-bottom: 0px;
      padding: 10px 20px;
    }
  }

  .slider-card p {
    font-weight: 300;
    font-size: 24px;
    color: #fffdfd;
    padding: 0px 46px 0px 37px;
    line-height: normal;
    @media screen and (max-width: 1200px) {
      font-size: 20px;
    }
    @media screen and (max-width: 740px) {
      font-size: 20px;
      padding-left: 20px;
    }
  }
</style>

<script>
  import EmblaCarousel from "embla-carousel";
  import { addDotBtnsAndClickHandlers } from "../scripts/dot-buttons";
  import Autoplay from "embla-carousel-autoplay";

  const emblaNode = document.querySelector(".embla") as HTMLElement;
  const options = {
    loop: true,
    stopOnMouseEnter: true,
    stopOnInteraction: false,
    duration: 60,
  };
  const autoplayOptions = {
    delay: 10000,
  };

  const dotsNode = document.querySelector(".embla__dots");
  const emblaApi = EmblaCarousel(emblaNode, options, [
    Autoplay(autoplayOptions),
  ]);
  const removeDotBtnsAndClickHandlers = addDotBtnsAndClickHandlers(
    emblaApi,
    dotsNode
  );

  emblaApi.on("destroy", removeDotBtnsAndClickHandlers);
</script>
