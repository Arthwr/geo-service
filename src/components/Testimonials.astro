---
import tLogo1 from "../assets/tLogo1.webp";
import tLogo2 from "../assets/tLogo2.webp";
import tLogo3 from "../assets/tLogo3.webp";
import tLogo4 from "../assets/tLogo4.webp";
import tLogo5 from "../assets/tLogo5.webp";
import tLogo6 from "../assets/tLogo6.webp";
import tLogo7 from "../assets/tLogo7.webp";

import testimon1 from "../assets/testimon1.webp";
import testimon2 from "../assets/testimon2.webp";
import testimon3 from "../assets/testimon3.webp";

---

<section class="max-w-[1250px] mx-[10px] xxs:mx-[40px] mb-[160px] lg:mx-auto">
  <div class="flex flex-col justify-center">
    <h3 class="text-center xxs:text-left mb-[79px] text-[40px] md:text-[56px] lg:text-[64px] font-normal text-titleGreenTxtColor ">
      Нам доверяют
    </h3>
    <p class="max-w-[619px] font-light text-[24px] md:text-[28px] lg:text-[32px]  ">
      Главная ценность, которой мы обладаем — это наша репутация и доверие наших
      клиентов.
    </p>
  </div>
  <div class="flex flex-wrap justify-center md:justify-start gap-5 logo-wrapper mt-[70px] mb-[43px] lg:mx-[40px]">
    <img src={tLogo1.src} loading="lazy" alt="Логотип DCS компании" />
    <img src={tLogo2.src} loading="lazy" alt="Логотип Ондасын строй компании" />
    <img src={tLogo3.src} loading="lazy" alt="Логотип JLL компании" />
    <img src={tLogo4.src} loading="lazy" alt="Логотип Royal Cars компании" />
    <img src={tLogo5.src} loading="lazy" alt="Логотип Optimum Design Institute компании" />
    <img src={tLogo6.src} loading="lazy" alt="Логотип MGK компании" />
    <img src={tLogo7.src} loading="lazy" alt="Логотип WT Group компании" />
  </div>
  <h4 class="text-[30px] xxs:text-[40px] mb-[124px] text-center md:text-left">Рекомендательные  письма:</h4>
  <div class="gallery">
    <div
      class="img-container flex flex-wrap gap-10 w-full h-full object-cover cursor-pointer justify-around"
    >
      <img
        class="border letter"
        src={testimon1.src}
        data-original={testimon1.src}
        alt="Рекомендательное письмо TOO Caspian Engineering and Research"
        width="284px"
        height="402px"
        loading="lazy"
        decoding="async"
      />
      <img
        class="border letter"
        src={testimon2.src}
        data-original={testimon2.src}
        alt="Рекомендательное письмо Института OPTIUM"
        width="284px"
        height="402px"
        loading="lazy"
        decoding="async"
      />
      <img
        class="border letter"
        src={testimon3.src}
        data-original={testimon3.src}
        alt="Рекомендательное письмо TOO САН-А"
        width="284px"
        height="402px"
        loading="lazy"
        decoding="async"
      />
    </div>
  </div>

  <style>
    .logo-wrapper img {
      object-fit: contain;
    }

    .img-container img {
      transition: transform 0.5s;

      @media screen and (max-wdith:1200px) {
        width: 200px;
        height: auto;
      }

    }

    .img-container img:hover {
      transform: scale(1.1);
    }
  </style>
</section>
